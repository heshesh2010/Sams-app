<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dash_board"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DashBoard" >

    <Button
        android:id="@+id/autobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="103dp"
        android:layout_toRightOf="@+id/reserverbtn"
        android:background="@drawable/auto" />

    <Button
        android:id="@+id/settingbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reserverbtn"
        android:layout_below="@+id/reserverbtn"
        android:layout_marginTop="41dp"
        android:background="@drawable/setting_intro" />

    <Button
        android:id="@+id/offlinebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settingbtn2"
        android:layout_alignBottom="@+id/settingbtn2"
        android:layout_alignRight="@+id/autobtn"
        android:background="@drawable/offline" />

    <Button
        android:id="@+id/reserverbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autobtn"
        android:layout_alignBottom="@+id/autobtn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:background="@drawable/reverse" />

</RelativeLayout>
