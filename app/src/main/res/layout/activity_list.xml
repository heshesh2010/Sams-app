<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Abs1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_screen"
    tools:context=".ListActivity1" >

    <ListView
        android:id="@+id/android:list"
        android:layout_width="393dp"
        android:layout_height="398dp"
        android:layout_below="@+id/searchlable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <EditText
        android:id="@+id/searchlable"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/settingbtn2"
        android:background="@drawable/search_back"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="لا يوجد طلاب غائبون؟"
        android:textColorHint="@color/LoginFields"
        android:textSize="16sp" />

    <Button
        android:id="@+id/getPass"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_below="@+id/android:list"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/aboutus" />

    <Button
        android:id="@+id/contactusbtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_below="@+id/android:list"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/getPass"
        android:background="@drawable/contactusbtn" />

    <TextView
        android:id="@+id/coursenameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/classidView"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/classidView"
        android:background="@drawable/course_id_view"
        android:textColor="@color/translucent_red"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sumbitbtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_below="@+id/android:list"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/contactusbtn"
        android:background="@drawable/submit_btn" />

    <TextView
        android:id="@+id/classidView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchlable"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/course_name_view"
        android:textColor="@color/LoginFields"
        android:textSize="18sp" />

    <Button
        android:id="@+id/settingbtn2"
        android:layout_width="46dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/setting_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/classidView"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="230dp"
        android:textColor="@color/translucent_red"
        android:textSize="@dimen/size2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="98dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/classidView"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/translucent_red"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/CheckBox20"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/settingbtn2"
        android:layout_alignBottom="@+id/settingbtn2"
        android:layout_alignLeft="@+id/contactusbtn"
        android:button="@drawable/test" />

</RelativeLayout>