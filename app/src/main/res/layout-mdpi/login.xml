<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Abs1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_screen"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/IDLogin"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/editbox"
        android:ems="10"
        android:enabled="true"
        android:fitsSystemWindows="true"
        android:hint="@string/hintlogin"
        android:inputType="text"
        android:textColor="@color/LoginFields"
        android:textColorHint="@color/LoginFields"
        android:textColorLink="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="monospace" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="136dp"
        android:layout_height="33dp"
        android:layout_below="@+id/radioGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/lgoinbtn" />

    <Button
        android:id="@+id/forgetpassordbtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="78dp"
        android:layout_height="24dp"
        android:layout_alignRight="@+id/LoginPass"
        android:layout_alignTop="@+id/radioGroup1"
        android:background="@drawable/forget_pass" />

    <CheckBox
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LoginPass"
        android:layout_below="@+id/LoginPass"
        android:layout_marginTop="40dp"
        android:button="@drawable/radio" />

    <EditText
        android:id="@+id/LoginPass"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/IDLogin"
        android:layout_below="@+id/IDLogin"
        android:layout_marginTop="37dp"
        android:background="@drawable/editbox"
        android:ems="10"
        android:enabled="true"
        android:fitsSystemWindows="true"
        android:hint="@string/hintpass"
        android:inputType="textPassword"
        android:textColor="@color/LoginFields"
        android:textColorHint="@color/LoginFields"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:visibility="visible" />

</RelativeLayout>