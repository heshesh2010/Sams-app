<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Abs1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contact_us_screen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactusActivity" >

    <EditText
        android:id="@+id/nid_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="20dp"
        android:background="@drawable/editbox"
        android:ems="10"
        android:enabled="true"
        android:fitsSystemWindows="true"
        android:hint="@string/hintSubject"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:textColor="@color/LoginFields"
        android:textColorHint="@color/LoginFields"
        android:textColorLink="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/emailfromTxtus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_below="@+id/nid_get"
        android:layout_marginTop="20dp"
        android:background="@drawable/editbox"
        android:ems="10"
        android:enabled="true"
        android:fitsSystemWindows="true"
        android:hint="@string/hintEmail"
        android:inputType="textEmailAddress"
        android:textColor="@color/LoginFields"
        android:textColorHint="@color/LoginFields"
        android:textColorLink="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace" >

        <requestFocus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </EditText>

    <EditText
        android:id="@+id/messageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_below="@+id/emailfromTxtus"
        android:layout_marginTop="20dp"
        android:background="@drawable/message"
        android:ems="10"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:textColorHint="@color/LoginFields"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="170dp"
        android:background="@drawable/secback"
        android:clickable="true"
        android:drawSelectorOnTop="true"
        android:popupBackground="@drawable/spinner"
        />

    <Button
        android:id="@+id/sendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageTxt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sendbtn" />

</RelativeLayout>