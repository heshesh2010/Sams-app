<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Abs1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rest_pass_screen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RestpassActivity" >

    <EditText
        android:id="@+id/nid_get"
        android:layout_width="339dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/editbox"
        android:ems="10"
        android:enabled="true"
        android:fitsSystemWindows="true"
        android:hint="@string/EnterYourMail"
        android:textColor="@color/LoginFields"
        android:textColorHint="@color/LoginFields"
        android:textColorLink="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/getPass"
        android:layout_width="166dp"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nid_get"
        android:layout_marginTop="55dp"
        android:background="@drawable/get_pass" />

</RelativeLayout>